<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sayiGöster"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:height="200dp"
        android:background="@color/purple_500"
        android:backgroundTint="#B24CAFA0"
        android:ems="10"
        android:gravity="bottom|right"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:text="0"
        android:textSize="36sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button_ac"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:onClick="btn_AC"
                android:backgroundTint="#B24CAFA0"
                android:text="AC"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_artı_eksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:padding="20dp"
                android:text="-/+"
                android:onClick="btn_sayi_click"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonYüzde"
                android:layout_width="90dp"
                android:onClick="btn_yüzde"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonBölme"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_arithmetics"
                android:text="/"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonÇarpı"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_arithmetics"
                android:text="*"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonEksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_arithmetics"
                android:text="-"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:onClick="btn_sayi_click"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonArtı"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:text="+"
                android:textSize="30sp"
                android:onClick="btn_arithmetics" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonNokta"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:text="0"
                android:textSize="30sp"
                android:onClick="btn_sayi_click" />

            <Button
                android:id="@+id/buttonVirgül"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#B24CAFA0"
                android:text=","
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonEşittir"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="btn_equal"
                android:layout_margin="0.5dp"
                android:layout_weight="1"

                android:backgroundTint="#0C403B"
                android:text="="
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>


</LinearLayout>